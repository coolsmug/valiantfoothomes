<div class="main-container">
    <%- include ('./messages/messages.ejs') %>
    <nav class="headering">
        <div class="head_in">
            <P>Admin Table</P>
         <ol>
            <li> 
                <a href="">
                    Home >
                </a>
            </li>
            <li> 
                <a href="">
                    Admin List
                </a>
            </li>
        </ol>
        </div>
        <a href="/admin/housing/1" class="created">All Properties</a>
    </nav>

    <div class="table_admin">
        <div class="d-name-tag">
            <p>Use this from to Add new House property</p>
        </div>

        <form action="/create-property" method="POST" enctype="multipart/form-data" class="formings">
            <div class="form-group">
                <label>Property's Name:</label>
                <input class="form-control" type="text" placeholder="e.g Apple City Estate" name="name">
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" value="" type="text" name="location">
            </div>
            <div class="form-group custom-select">
                <label>Status:</label>
                <select name="status" class="form-control">
                    <option>Select status</option>
                    <option value="Rent">Rent</option>
                    <option value="Sale">Sale</option>
                    <option value="Sold">Sold</option>
                </select>
            </div>
            <div class="form-group custom-select">
                <label>Period:</label>
                <select name="period" class="form-control">
                    <option>Select status</option>
                    <option value="New">New</option>
                    <option value="Recent">Recent</option>
                    <option value="Old">Old</option>
                </select>
            </div>
            <div class="form-group">
                <label>Area:</label>
                <input class="form-control" value="" type="text" name="area">
            </div>
            <div class="form-group">
                <label>Bed:</label>
                <input class="form-control" value="" type="text" name="bed">
            </div>
            <div class="form-group">
                <label>Baths:</label>
                <input class="form-control" value="" type="text" name="baths">
            </div>
            <div class="form-group">
                <label>Garage:</label>
                <input class="form-control" value="" type="text" name="garage">
            </div>
            <div class="form-group">
                <label>Amenities:</label>
                <textarea class="form-control" name="amenities"></textarea>
            </div>
            <div class="form-group">
                <label>Description:</label>
                <textarea class="form-control" name="description"></textarea>
            </div>
            <div class="form-group">
                <label for="img">Upload House Front view Image</label>
                <input type="file" name="img" id="img" class="form-control-file form-control height-auto" >
            </div>
            <div class="form-group">
                <label for="img1">Second Image</label>
                <input type="file" name="img2" id="img2" class="form-control-file form-control height-auto">
            </div>
            <div class="form-group">
                <label for="floor_plan">Floor plan</label>
                <input type="file" name="floor_plan" id="floor_plan" class="form-control-file form-control height-auto" >
            </div>
            <div class="form-group">
                <label for="video">House view clip</label>
                <div class="custom-file">
                    <input type="file" name="video" id="video" class="custom-file-input" >
                    <label class="custom-file-label">Choose file</label>
                </div>
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <input type="submit">
                </div>
            </div>
        </form>
    </div>

    <div class="footering">
        <h3>All rights reserved and Powered by: Valiantfoot Limited <i class="fas fa-copyright"></i> 2023</h3>
    </div>
</div>

