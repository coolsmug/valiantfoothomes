        <div class="d-name-tag">
            <p>Use this from to create company Information</p>
        </div>

        <form action="/create-info" method="POST" enctype="multipart/form-data" class="formings">
            <div class="form-group">
                <label>Company's Name:</label>
                <input class="form-control" type="text" placeholder="e.g Idris Valiantfooot" name="company_name">
            </div>
            <div class="form-group">
                <label>Address:</label>
                <input class="form-control" value="" type="text" name="address">
            </div>
            <div class="form-group">
                <label>Mobile:</label>
                <input class="form-control" value="" type="text" name="mobile">
            </div>
            <div class="form-group">
                <label>Mobile 2:</label>
                <input class="form-control" value="" type="text" name="mobile2">
            </div>
            <div class="form-group">
                <label>Mobile 3:</label>
                <input class="form-control" value="" type="text" name="mobile3">
            </div>
            <div class="form-group">
                <label>Land Phone:</label>
                <input class="form-control" value="" type="text" name="phone">
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input class="form-control" value="" type="text" name="email">
            </div>
            <div class="form-group">
                <label>State:</label>
                <input class="form-control" value="" type="text" name="state">
            </div>
            <div class="form-group">
                <label>About Title:</label>
                <input class="form-control" value="" type="text" name="heading">
            </div>
           
            <div class="form-group">
                <label>About:</label>
                <textarea class="form-control" name="about" ></textarea>
            </div>
            <div class="form-group">
                <label for="img">About image Cover:</label>
                <input type="file" name="img" id="img" class="form-control-file form-control height-auto" >
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <input type="submit">
                </div>
            </div>
        </form>
