<%- include ('./dash_include/header.ejs')  %>
<%- include ('./dash_include/dashboard_all.ejs') %>


<div class="main-container">
    <nav class="headering">
        <div class="head_in">
            <P>Staff Form</P>
         <ol>
            <li> 
                <a href="">
                    Home >
                </a>
            </li>
            <li> 
                <a href="">
                    Add Staff
                </a>
            </li>
        </ol>
        </div>
        <a href="/admin/staff/1" class="created">All Staffs</a>
    </nav>

    <div class="table_admin">
        <%- include ('./messages/messages.ejs') %>
        <div class="d-name-tag">
            <p>Use this from to add new Staff</p>
        </div>

        <form action="/create-staff" method="POST" enctype="multipart/form-data" class="formings">
            <div class="form-group">
                <label>First Name:  <span>*</span></label>
                <input class="form-control" type="text" placeholder="" name="first_name">
            </div>
            <div class="form-group">
                <label>Second Name: <span>*</span></label>
                <input class="form-control" type="text" name="second_name">
            </div>
            <div class="form-group custom-select">
                <label>Position: <span>*</span></label>
                <select name="position" class="form-control">
                    <option>Select Option</option>
                    <option value="Managing Director">Managing Director</option>
                    <option value="CEO">CEO</option>
                    <option value="General Manager">General Manager</option>
                    <option value="HR">HR</option>
                    <option value="Marketer">Marketer</option>
                    <option value="Agent">Agent</option>
                    <option value="Staff">Staff</option>
                    <option value="Driver">Driver</option>
                </select>
            </div>
            <div class="form-group custom-select">
                <label>Performance: <span>*</span></label>
                <select name="performance" class="form-control">
                    <option>Select Option</option>
                    <option value="Mid Level">Mid Level</option>
                    <option value="Best">Best</option>
                </select>
            </div>
            <div class="form-group">
                <label>Email: <span>*</span></label>
                <input class="form-control" type="email" name="email">
            </div>
            <div class="form-group">
                <label>Mobile Number: <span>*</span></label>
                <input class="form-control" type="text" name="phone">
            </div>
            <div class="form-group">
                <label>WhatsApp Number: <span>*</span></label>
                <input class="form-control" type="text" name="whatsapp">
            </div>
            <div class="form-group">
                <label>Facebook: <span>*</span></label>
                <input class="form-control" type="text" name="facebook">
            </div>
            <div class="form-group">
                <label>Instagram: <span>*</span></label>
                <input class="form-control" type="text" name="instagram">
            </div>
            <div class="form-group">
                <label>Twitter: <span>*</span></label>
                <input class="form-control" type="text" name="twitter">
            </div>
            <div class="form-group">
                <label>Linkedin:</label>
                <input class="form-control" type="text" name="linkedin">
            </div>
            <div class="form-group">
                <label>About: <span>*</span></label>
                <textarea class="form-control" name="about" id="myInput"></textarea>
            </div>
            <div class="form-group">
                <label for="img">Upload image: <span>*</span></label>
                <input type="file" name="img" id="img" class="form-control-file form-control height-auto" >
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <input type="submit">
                </div>
            </div>
        </form>
    </div>


    <div class="footering">
        <h3>All rights reserved and Powered by: Valiantfoot Limited <i class="fas fa-copyright"></i> 2023</h3>
    </div>
</div>

<%- include ('./dash_include/footer.ejs') %>

<script>
    const MAX_LENGTH = 100;

const myInput = document.getElementById('myInput');

myInput.addEventListener('input', (event) => {
  const value = event.target.value;
  if (value.length > MAX_LENGTH) {
    event.target.value = value.slice(0, MAX_LENGTH);
  }
});
</script>