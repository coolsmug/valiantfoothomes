    <div class="table_admin">
        <%- include ('./messages/messages.ejs') %>
        <div class="d-name-tag">
            <p>Use this from to Add new House property</p>
        </div>

        <form action="/create-blog" method="POST" enctype="multipart/form-data" class="formings">
            <div class="form-group">
                <label>Author's Name:</label>
                <input class="form-control" type="text" placeholder="e.g Idris Yusuph Olatunji Land" name="fullname">
            </div>
            <div class="form-group">
                <label>Topic:</label>
                <input class="form-control" value="" type="text" name="topic">
            </div>
            <div class="form-group custom-select">
                <label>Category:</label>
                <select name="category" class="form-control">
                    <option>Select Option</option>
                    <option value="Housing">Housing</option>
                    <option value="Holiday">Holiday</option>
                    <option value="Government">Government</option>
                    <option value="Politics">Politics</option>
                    <option value="Sport">Sport</option>
                    <option value="Bussiness">Bussiness</option>
                    <option value="Reality">Reality</option>
                </select>
            </div>
            <div class="form-group">
                <label>Articles:</label>
                <textarea class="form-control" name="article" id="myTextArea"></textarea>
            </div>
            <div class="form-group">
                <label for="img">Page Cover:</label>
                <input type="file" name="img" id="img" class="form-control-file form-control height-auto" >
            </div>
            <div class="form-group">
                <label for="img2">Image:</label>
                <input type="file" name="img2" id="img2" class="form-control-file form-control height-auto" >
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <input type="submit">
                </div>
            </div>
        </form>
    </div>

    <div class="footering">
        <h3>All rights reserved and Powered by: Valiantfoot Limited <i class="fas fa-copyright"></i> 2023</h3>
    </div>
</div>

